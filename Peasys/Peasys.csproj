<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>DIPS</Authors>
    <Description>Client using the Peasys API for connexion and data exchange with an IBMi server in dotnet.</Description>
    <PackageProjectUrl>https://github/dips400/peasys-dotnet</PackageProjectUrl>
    <PackageIcon>LogoUnit (1).png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github/dips400/peasys-dotnet</RepositoryUrl>
    <PackageTags>ibmi;api;</PackageTags>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Peasys IBMi</Title>
    <PackageReleaseNotes>First version of our newly created Peasys solution</PackageReleaseNotes>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="PeaClient.cs" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="PeaClient.cs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
